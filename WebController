<script>
A= document.getElementById("A")

BG= document.querySelector("body");


function Abtn(){
document.querySelector("body").setAttribute("style", "background-color: blue")
}

function Bbtn(){
	BG.setAttribute("style", "background-color: red")
	
}

function Xbtn(){
	BG.setAttribute("style", "background-color: Yellow")
	
}

function Ybtn(){
	BG.setAttribute("style", "background-color:green")
	
}


function Zbtn(){
	BG.setAttribute("style", "background-color:indigo")
	
}

</script>



